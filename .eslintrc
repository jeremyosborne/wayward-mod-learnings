{
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "rules": {
    "comma-dangle": ["error", "only-multiline"],
    "object-curly-spacing": ["error", "never"],
    "no-undef": ["off"], // rely on TypeScript compiler to catch errors, not eslint.
    "quotes": ["error", "double", { "avoidEscape": true }],
    "yoda": ["off"]
  }
}
